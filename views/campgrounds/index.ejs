<%- include('../partials/header') %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary" href="/campgrounds/new">Add new Campground</a>
            </p>
        </div>
    </header>
    
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% campgrounds.forEach((campground) => { %>
            <div class="col-md-3 col-sm-6 justify-content-center">
                <div class="card mb-2">
                    <img style="height: 160px; object-fit: cover;overflow: hidden;" class="card-img-top" src="<%= campground.image %>">
                    <div class="card-body p-2">
                      <h5 class="card-title mb-1 mt-2"><%= campground.name %></h5>
                      <p class="mt-3 mb-1">
                        <a href="/campgrounds/<%= campground._id%>" class="btn btn-sm btn-outline-info">More Info</a>
                      </p>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include('../partials/footer') %>