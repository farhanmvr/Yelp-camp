<%- include('../partials/header') %>

<div class="container">
    <div class="row-1 mt-5">
        <h2 class="mb-5 text-center">Edit <%= campground.name %></h2>
        <div style="width: 30%; margin: 0 auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <input class="form-control mb-3" value="<%= campground.name %>" type="text" name="campground[name]" placeholder="name">
                <input class="form-control mb-3" value="<%= campground.price %>" type="number" name="campground[price]" placeholder="price" min="0.01" step="0.01">
                <input class="form-control mb-3" value="<%= campground.image %>" type="text" name="campground[image]" placeholder="image url">
                <input class="form-control mb-3" value="<%= campground.desc %>" type="text" name="campground[desc]" placeholder="description">
                <button class="btn btn-primary btn-block mb-3">Submit</button>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
